menu "OAP PMSx003 Sensor"

config OAP_PM_UART_NUM
    hex "uart num"
    default 1
    help
        todo

config OAP_PM_SENSOR_CONTROL_PIN
    int "SET gpio"
    default 10
    help
        ESP32 R/W gpio connected to sensor SET line - it enables/disables sensor.

config OAP_PM_UART_RXD_PIN
    int "RX gpio"
    default 34
    help
        ESP32 gpio connected to sensor RX line. This pin can be R/O (>=34).
        
config OAP_PM_UART_TXD_PIN
    int "TX gpio"
    default 4
    help
        Any pin (no need to connect this line)
        

config OAP_PM_UART_RTS_PIN
    int "RTS gpio"
    default 18
    help
        Any pin (no need to connect this line)

config OAP_PM_UART_CTS_PIN
    int "CTS gpio"
    default 19
    help
        Any pin (no need to connect this line)

endmenu